{
  "name": "@locallytics/cli",
  "version": "0.0.1",
  "description": "CLI tools for Locallytics schema generation and migration",
  "license": "MIT",
  "type": "module",
  "bin": {
    "locallytics": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
